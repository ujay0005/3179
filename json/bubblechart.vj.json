      },
      "range": [
        "white",
        "#FFC9B3"
      ]
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "tree"
      },
      "encode": {
        "enter": {
          "shape": {
            "value": "circle"
          },
          "fill": {
            "scale": "color",
            "field": "depth"
          },
          "tooltip": {
            "signal": "datum.country + datum.emission"
          }
        },
        "update": {
          "x": {
            "field": "x"
          },
          "y": {
            "field": "y"
          },
          "size": {
            "signal": "4 * datum.r * datum.r"
          },
          "stroke": {
            "value": "white"
          },
          "strokeWidth": {
            "value": 0.5
          }
        }
      }
    },
    {
      "type": "text",
      "from": {
        "data": "tree"
      },
      "encode": {
        "enter": {
          "text": {
            "field": "text"
          },
          "fontSize": {
            "value": 8
          },
          "baseline": {
            "value": "middle"
          }
        },
        "update": {
          "x": {
            "field": "x"
          },
          "y": {
            "field": "y"
          },
          "dx": {
            "signal": "(datum.leftside ? -1 : 1)"
          },
          "angle": {
            "signal": "datum.leftside ? datum.angle : datum.angle"
          },
          "align": {
            "signal": "datum.leftside ? 'center' : 'center'"
          }
        }
      }
    }
  ]
