          "size": [{"signal": "width"}, {"signal": "height"}],
          "sort": {"field": "emission", "order": "descending"}
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "tree", "field": "id"},
      "range": ["transparent", "yellow","pink","blue","red","orange","#4287f5","#f5429c","#f58142","#f54269","#0d104f","#a1bf56","green"]
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {"data": "tree"},
      "encode": {
        "enter": {
          "shape": {"value": "circle"},
          "fill": {"scale": "color", "field": "id"},
          "tooltip": {"signal": "datum.country + datum.emission"},
          "stroke":"black"
        },
        "update": {
          "x": {"field": "x"},
          "y": {"field": "y"},
          "size": {"signal": "4 * datum.r * datum.r"},
          "stroke": {"value": "white"},
          "strokeWidth": {"value": 0.5}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "tree"},
      "encode": {
        "enter": {
          "text": {"field": "text"},
          "fontSize": {"value": 8},
          "baseline": {"value": "middle"}
        },
        "update": {
          "x": {"field": "x"},
          "y": {"field": "y"},
          "dx": {"signal": "(datum.leftside ? -1 : 1)"},
          "angle": {"signal": "datum.leftside ? datum.angle : datum.angle"},
          "align": {"signal": "datum.leftside ? 'center' : 'center'"}
        }
      }
    }
  ]
