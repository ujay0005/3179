{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/ujay0005/3179/main/data/crisis.csv"
  },
  "mark": "bar",
  "title": "On a scale of 1-10 how worried are people about global warming",
  "width": {"step": 25},
  "encoding": {
    "x": {
      "aggregate": "sum",
      "field": "percent",
      "title": "percent",
      "stack": "normalize"
    },
    "y": {"field": "year"},
    "color": {"field": "scale"}
  }
}