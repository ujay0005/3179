{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A simple donut chart with embedded data.",
  "data": {
    "url": "https://raw.githubusercontent.com/ujay0005/3179/main/data/sector.csv"
  },
  "height": 300,
  "width": 300,
  "background": "transparent",
  "params": [
    {
      "name": "Yearc",
      "value": 2000,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2020,
        "step": 1,
        "name": "Year:"
      }
    }
  ],
  "transform": [{"filter": "datum.Year==Yearc"}],
  "mark": {"type": "arc", "innerRadius": 50},
  "encoding": {
    "theta": {"field": "Value", "type": "quantitative"},
    "color": {"field": "Sector", "type": "nominal", "scale": { "range": ["#48233C", "#40376E", "#36558F", "#96ACB7", "#D4E4BC"]}},
    "tooltip": [{"field": "Sector", "type": "nominal", "title": "Sector"},{"field": "Value", "type": "quantitative", "title": "Emmisions(MtCO2e)"}]
  },
  "config": {"legend": {"labelFont": "Tahoma", "titleFont": "Tahoma","labelFontSize":12,"titleFontSize":16}}
}